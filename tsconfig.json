{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "ES2016",
    "skipLibCheck": true,
    "lib": ["ES6", "DOM"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@hooks": ["src/hooks"]
    }
  },
  "exclude": ["node_modules", "public", "webpack", "config", "coverage"]
}
